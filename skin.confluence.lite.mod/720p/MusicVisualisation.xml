<window id="2006">
	<onload  condition="Skin.HasSetting(ShowArtistSlideShow) + System.HasAddon(script.artistslideshow) + IsEmpty(Window.Property(ArtistSlideshowRunning))">RunScript(script.artistslideshow)</onload>
	<defaultcontrol>-</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include condition="Skin.HasSetting(ShowBackgroundAlbumWall)">AlbumArtMusicVizWall</include>
		<control type="image">
			<description>XBMC DB FanArt Background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<aspectratio>keep</aspectratio>
			<texture fallback="special://skin/backgrounds/default.jpg" background="true">$INFO[MusicPlayer.Property(Fanart_Image)]</texture>
			<include>KBurnsAnimateFanart</include>
			<visible>Player.HasAudio + !Skin.HasSetting(ShowBackgroundAlbumWall)</visible>
			<visible>!System.HasAddon(script.artistslideshow) | !Skin.HasSetting(ShowArtistSlideShow)</visible>
		</control>
		<control type="multiimage">
			<description>Artist SlideShow FanArt Background</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath background="true">$INFO[Window(Visualisation).Property(ArtistSlideshow)]</imagepath>
			<aspectratio>keep</aspectratio>
			<timeperimage>9000</timeperimage>
			<randomize>true</randomize>
			<fadetime>4000</fadetime>
			<animation effect="fade" start="0" end="100" time="300">Visible</animation>
			<animation effect="fade" start="100" end="0" time="300">Hidden</animation>
			<include>KBurnsAnimateFanart</include> 
			<visible>Player.HasAudio + Skin.HasSetting(ShowArtistSlideShow) + System.HasAddon(script.artistslideshow)</visible>
		</control>
		<control type="visualisation" id="2">
			<!-- FIX ME Music Visualization needs to have an id of 2 in this window to be able to lock or change preset -->
			<description>visualisation</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
		</control>
		<control type="group">
			<animation effect="fade" time="200">VisibleChange</animation>
			<visible>![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]</visible>
			<control type="image">
				<posx>0</posx>
				<posy>-150</posy>
				<width>1280</width>
				<height>256</height>
				<texture flipy="true">HomeNowPlayingBack.png</texture>
			</control>
			<control type="label">
				<description>Partymode Header label</description>
				<posx>30</posx>
				<posy>5</posy>
				<width>800</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$LOCALIZE[589]</label>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label">
				<description>Normal Header label</description>
				<posx>30</posx>
				<posy>5</posy>
				<width>800</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[musicplayer.Playlistposition,$LOCALIZE[554]: ]$INFO[musicplayer.Playlistlength, / ]</label>
				<visible>!MusicPartyMode.Enabled</visible>
			</control>
			<control type="label">
				<description>Clock label</description>
				<posx>1250</posx>
				<posy>5</posy>
				<width>800</width>
				<height>25</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>$INFO[System.Time]</label>
				<animation effect="slide" start="0,0" end="-70,0" time="0" condition="Window.IsVisible(MusicOSD)">conditional</animation>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>250r</posy>
				<width>1280</width>
				<height>250</height>
				<texture>HomeNowPlayingBack.png</texture>
			</control>
			<control type="image">
				<posx>310</posx>
				<posy>230r</posy>
				<width>200</width>
				<height>78</height>
				<texture fallback="XBMC_Logo.png">$INFO[Player.FolderPath,,../logo.png]</texture>
				<aspectratio align="bottom">keep</aspectratio>
			</control>
			<control type="image">
				<description>Cd overlay</description>
				<posx>120</posx>
				<posy>220r</posy>>
				<animation effect="slide" start="-70" end="0" time="900" tween="cubic" easing="out" delay="2000">WindowOpen</animation>
				<animation effect="rotate" end="-360" center="auto" time="2250" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<width>170</width>
				<height>175</height>
				<texture fallback="DefaultCDArt.png">$INFO[Player.FolderPath,,cdart.png]</texture>
				<aspectratio align="bottom">keep</aspectratio>
			</control>
			<control type="image">
				<description>Cover Image</description>
				<posx>40</posx>
				<posy>222r</posy>
				<width>180</width>
				<height>180</height>
				<aspectratio aligny="bottom">stretch</aspectratio>
				<texture  fallback="DefaultAlbumCover.png" diffuse="/CDCase/cdcase-diffuse.png">$INFO[MusicPlayer.Cover]</texture>
			</control>
			<control type="image">
				<description>CD Case</description>
				<posx>25</posx>
				<posy>225r</posy>
				<width>198</width>
				<height>186</height>
				<aspectratio aligny="bottom">stretch</aspectratio>
				<texture>CDCase/cdcase.png</texture>
			</control>			
			<control type="group">
				<posx>330</posx>
				<posy>175r</posy>
				<control type="label" id="1">
					<description>Artist label</description>
					<posx>20</posx>
					<posy>30</posy>
					<width>910</width>
					<height>25</height>
					<align>left</align>
					<font>font12</font>
					<label>$INFO[MusicPlayer.Artist]$INFO[MusicPlayer.Album, - ]</label>
					<textcolor>grey2</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
				<control type="grouplist">
					<posx>20</posx>
					<posy>60</posy>
					<width>910</width>
					<height>35</height>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<control type="label">
						<width min="10" max="710">auto</width>
						<height>30</height>
						<font>font30</font>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[MusicPlayer.Title]</label>
						<textcolor>orange</textcolor>
						<scroll>true</scroll>
					</control>
					<control type="image">
						<description>Audio Codec Image</description>
						<width>90</width>
						<height>35</height>
						<aspectratio align="right">keep</aspectratio>
						<texture>$INFO[MusicPlayer.Codec,MediaFlags/audio/,.png]</texture>
					</control>
					<control type="image">
						<description>Rating</description>
						<width>110</width>
						<height>35</height>
						<aspectratio align="center">keep</aspectratio>
						<texture fallback="LeftRating/rating0.png">$INFO[Player.StarRating,LeftRating/]</texture>
					</control>
				</control>
			</control>
			<control type="label">
				<posx>330</posx>
				<posy>35r</posy>
				<width>910</width>
				<height>25</height>
				<label>$LOCALIZE[209]: $INFO[MusicPlayer.offset(1).Artist,, - ]$INFO[MusicPlayer.offset(1).Title]</label>
				<align>center</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>grey</textcolor>
				<scroll>true</scroll>
				<visible>Skin.HasSetting(HideNext5Songs) + MusicPlayer.HasNext + !Window.IsVisible(MusicOSD)</visible>
				<animation effect="fade" time="200">VisibleChange</animation>
			</control>					
			<control type="fadelabel">
				<description>Next 5 Songs fadelabel</description>
				<posx>10</posx>
				<posy>33r</posy>
				<height>30</height>
				<width>1260</width>
				<label>$VAR[NextFiveScroller]</label>
				<align>center</align>
				<aligny>center</aligny>
				<font>font13</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<scrollout>true</scrollout>
				<scrollspeed>30</scrollspeed> 
				<pauseatend>2000</pauseatend>
				<visible>Player.HasAudio + [IsEmpty(Window(Weather).Property(Alerts)) | Skin.HasSetting(HideWeatherAlertRSS)] + !Skin.HasSetting(HideNext5Songs) + !Window.IsVisible(Favourites)+ !Window.IsVisible(MusicOSD)+ !Window.IsVisible(115)</visible>
			</control>
			<control type="group">
				<posx>330</posx>
				<posy>85r</posy>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>100</width>
					<height>40</height>
					<font>font13</font>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Time(hh:mm:ss)]</label>
				</control>
				<control type="progress">
					<description>Progressbar</description>
					<posx>100</posx>
					<posy>15</posy>
					<width>720</width>
					<height>16</height>
					<info>Player.Progress</info>
				</control>
				<control type="label">
					<posx>920</posx>
					<posy>0</posy>
					<width>100</width>
					<height>40</height>
					<font>font13</font>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[Player.Duration(hh:mm:ss)]</label>
				</control>
			</control>
		</control>	
		<!-- codec & viz infos -->
		<control type="group" id="0">
			<posx>0</posx>
			<posy>50</posy>
			<visible>Player.ShowCodec + ![Window.IsVisible(script-XBMC_Lyrics-main.xml) | Window.IsVisible(VisualisationSettings) | Window.IsVisible(VisualisationPresetList)]</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="image">
				<description>media info background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>105</height>
				<colordiffuse>AAFFFFFF</colordiffuse>
				<texture>black-back.png</texture>
			</control>
			<control type="label">
				<description>row 1 label</description>
				<posx>50</posx>
				<posy>10</posy>
				<label>-</label>
				<align>left</align>
				<label>$INFO[musicplayer.Codec,$LOCALIZE[21446]: ,]$INFO[musicplayer.Bitrate, · $LOCALIZE[623]: ,kbps]$INFO[musicplayer.bitspersample, · $LOCALIZE[612]: ,bit]$INFO[musicplayer.Samplerate, · $LOCALIZE[613]: ,kHz]$INFO[musicplayer.Channels, · $LOCALIZE[21444]: ]</label>
				<font>font12</font>
			</control>
			<control type="label">
				<description>row 2 label</description>
				<posx>50</posx>
				<posy>40</posy>
				<label>-</label>
				<align>left</align>
				<label>$INFO[Visualisation.Name] [I][COLOR=orange]($LOCALIZE[20166])[/COLOR][/I] · fps: $INFO[System.FPS]</label>
				<font>font12</font>
				<visible>Visualisation.Locked</visible>
			</control>
			<control type="label">
				<description>Unlocked row 2 label</description>
				<posx>50</posx>
				<posy>40</posy>
				<label>-</label>
				<align>left</align>
				<label>$INFO[Visualisation.Name] · fps: $INFO[System.FPS]</label>
				<font>font12</font>
				<visible>!Visualisation.Locked</visible>
			</control>
			<control type="label">
				<description>row 3 label</description>
				<posx>50</posx>
				<posy>70</posy>
				<label>-</label>
				<align>left</align>
				<label>$LOCALIZE[13388]: $INFO[Visualisation.Preset]</label>
				<font>font12</font>
			</control>
		</control>
	</controls>
</window>